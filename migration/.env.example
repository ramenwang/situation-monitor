# Trading News Scanner Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS (Optional - some features work without them)
# =============================================================================

# Finnhub API key for stock market data
# Get free key at: https://finnhub.io/
# Free tier: 60 calls/minute
FINNHUB_API_KEY=

# FRED API key for Federal Reserve economic data
# Get free key at: https://fred.stlouisfed.org/docs/api/api_key.html
# Free tier: Unlimited requests
FRED_API_KEY=

# =============================================================================
# CORS PROXIES (For RSS feeds in browser environments)
# =============================================================================

# Primary CORS proxy URL
# Public options:
#   - https://api.allorigins.win/raw?url=
#   - https://corsproxy.io/?url=
# For production, deploy your own Cloudflare Worker
CORS_PROXY_PRIMARY=https://api.allorigins.win/raw?url=

# Fallback CORS proxy URL (used if primary fails)
CORS_PROXY_FALLBACK=https://corsproxy.io/?url=

# =============================================================================
# REQUEST SETTINGS
# =============================================================================

# Request timeout in milliseconds (default: 15000)
REQUEST_TIMEOUT=15000

# Delay between requests in milliseconds (default: 500)
# Helps avoid rate limiting
DELAY_BETWEEN_REQUESTS=500

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# News cache TTL in milliseconds (default: 300000 = 5 minutes)
CACHE_TTL_NEWS=300000

# Market data cache TTL in milliseconds (default: 60000 = 1 minute)
CACHE_TTL_MARKETS=60000

# =============================================================================
# CIRCUIT BREAKER SETTINGS
# =============================================================================

# Number of failures before opening circuit (default: 3)
CIRCUIT_BREAKER_THRESHOLD=3

# Time to wait before trying again in milliseconds (default: 60000 = 1 minute)
CIRCUIT_BREAKER_RESET_MS=60000

# =============================================================================
# OUTPUT SETTINGS
# =============================================================================

# Output directory for JSONL/SQLite files (default: ./output)
OUTPUT_DIR=./output

# Output format: jsonl or sqlite (default: jsonl)
OUTPUT_FORMAT=jsonl

# =============================================================================
# DEBUG
# =============================================================================

# Enable debug logging (default: false)
DEBUG=false
